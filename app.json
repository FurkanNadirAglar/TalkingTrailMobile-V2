{
  "expo": {
    "name": "Talking Trail",
    "slug": "TalkingTrailMobile-V2",
    "version": "3.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/TT-App_Button.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app needs access to the photo library.",
        "NSCameraUsageDescription": "This app needs access to the camera."
      },
      "supportsTablet": true
    },
    "android": {
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/TT-App_Button.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.squaresharp.talkingtrail"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "6400afd8-1416-4a95-9aaa-da5d204096c7"
      }
    }
  }
}
